<?xml version="1.0"?>
<ruleset name="Brain Games">
    <description>Brain Games coding standard</description>
    
    <!-- Проверяем только src -->
    <file>src</file>
    
    <!-- Исключаем vendor и bin -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    
    <!-- Стандарт PSR12 -->
    <rule ref="PSR12"/>
    
    <!-- Дополнительные настройки -->
    <arg name="colors"/>
</ruleset>
